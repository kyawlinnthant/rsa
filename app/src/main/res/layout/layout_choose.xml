<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <com.google.android.material.button.MaterialButton
            app:rippleColor="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimary"
            app:cornerRadius="16dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/colorPrimary"
            android:text="sender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/sender" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp"
            app:layout_constraintBottom_toTopOf="@+id/receiver"
            app:layout_constraintVertical_chainStyle="packed" android:layout_marginBottom="32dp"/>
            <com.google.android.material.button.MaterialButton
                    app:rippleColor="@color/colorAccentDark"

                    android:textColor="@color/colorAccent"
                    app:cornerRadius="16dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="@color/colorAccent"
                    android:text="receiver"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/receiver" android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/sender" app:layout_constraintEnd_toEndOf="@+id/sender"
                    app:layout_constraintStart_toStartOf="@+id/sender" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>